@model SAMarineAndBoatSupplies.Models.AdminViewModel.DashboardViewModel




<div class="accordion-div">
    <p>
        <a class="btn btn-primary btn-block" data-toggle="collapse" href="#pending" role="button" aria-expanded="false" aria-controls="collapseExample">
            Pending Orders (@Model.Orders.Count())
        </a>
    </p>
    <div class="collapse show" id="pending">
        <div class="">
            @foreach (var order in Model.Orders)
            {
                <a class="pending-link" asp-controller="Admin" asp-action="OrderDetails" asp-route-id="@order.OrderId">
                    <p>ORDER: @order.FirstName @order.LastName, @order.PhoneNumber, @order.OrderTotal.ToString("c"), @order.OrderId</p>
                </a>
            }
        </div>
    </div>
</div>
<br />
<div class="accordion-div">
    <p>
        <a class="btn btn-primary btn-block" data-toggle="collapse" href="#cats" role="button" aria-expanded="false" aria-controls="collapseExample">
            Manage Product Categories
        </a>
    </p>
    <div class="collapse" id="cats">
        <div class="row">
            <div class="col-lg-6 col-sm-12">
                <h3>Add Category</h3>
                <form asp-action="AddCategory" method="post"class="form-inline my-2 my-lg-0">
                    <input asp-for="Category.Name" id="" class="form-control form-control-sm mr-sm-2" type="text" placeholder="Category Name" aria-label="Name" name="CategoryName">
                    <button class="btn btn-sm btn-primary my-2 my-sm-0" type="submit">Add</button>
                </form>
            </div>
            <div class="col-lg-6 col-sm-12">
                <h3>Remove Category</h3>
                <form asp-action="RemoveCategory" method="post" class="form-inline">
                    <label class="my-1 mr-2" for="inlineFormCustomSelectPref">Current Categories</label>
                    <select name="categoryId" asp-for="Category.CategoryId" class="custom-select my-1 mr-sm-2" id="inlineFormCustomSelectPref">
                        <option value="" selected>--Select Category--</option>
                        @foreach (var category in Model.Categories)
                        {
                            <option value="@category.CategoryId">@category.Name</option>
                        }
                    </select>
                    <button type="submit" class="btn btn-danger my-1">Remove</button>
                </form>

            </div>
        </div>
    </div>
</div>
<br />
<div class="accordion-div">
