@model SAMarineAndBoatSupplies.Models.AboutContact

@{
    ViewData["Title"] = "About Us";
}

<div class="animated fadeIn main" id="main">
    <h2 class="display-4">@ViewData["Title"]</h2>

    <p class="lead">@Model.AboutMessage</p>
    <br />

    <h2 class="display-4">Contact Us</h2>

    <address>
        @Model.AddressLine1<br />
        @Model.AddressLine2<br />
        @Model.City<br />
        @Model.PostCode<br />
    </address>

    <address>
        <strong>Email:</strong> <a href="mailto:@Model.Email">@Model.Email</a><br />
    </address>
</div>